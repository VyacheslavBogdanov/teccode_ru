{
	"name": "component-library-vite",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite",
		"server": "node --env-file=.env server/index.js",
		"dev:server": "nodemon --watch server --ext js,json --exec \"node --env-file=.env server/index.js\"",
		"dev:full": "run-p dev dev:server",
		"db:up": "docker compose up -d db",
		"db:down": "docker compose down",
		"prisma:generate": "prisma generate",
		"prisma:migrate": "prisma migrate dev",
		"prisma:deploy": "prisma migrate deploy",
		"db:import-json": "node --env-file=.env server/scripts/import-db-json.js",
		"start": "node server/index.js",
		"build:prod": "npm run build-only",
		"build": "run-p type-check \"build-only {@}\" --",
		"preview": "vite preview",
		"build-only": "vite build",
		"type-check": "vue-tsc --build --force",
		"lint": "eslint . --fix",
		"format": "prettier --write src/"
	},
	"eslintConfig": {
		"extends": [
			"prettier"
		],
		"plugins": [
			"prettier"
		]
	},
	"dependencies": {
		"@prisma/client": "^6.16.1",
		"cors": "^2.8.5",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"express": "^4.21.1",
		"nodemailer": "^8.0.1",
		"pinia": "^3.0.4",
		"uuid": "^11.0.3",
		"vue": "^3.5.12",
		"vue-router": "^4.6.3"
	},
	"devDependencies": {
		"@tsconfig/node22": "^22.0.0",
		"@types/node": "^22.9.0",
		"@vitejs/plugin-vue": "^5.1.4",
		"@vue/eslint-config-prettier": "^10.1.0",
		"@vue/eslint-config-typescript": "^14.1.3",
		"@vue/tsconfig": "^0.5.1",
		"autoprefixer": "^10.4.22",
		"eslint": "^9.14.0",
		"eslint-plugin-vue": "^9.30.0",
		"nodemon": "^3.1.7",
		"npm-run-all2": "^7.0.1",
		"postcss": "^8.5.6",
		"prettier": "^3.3.3",
		"prisma": "^6.16.1",
		"sass-embedded": "^1.81.0",
		"typescript": "~5.6.3",
		"vite": "^5.4.10",
		"vite-plugin-vue-devtools": "^7.5.4",
		"vue-tsc": "^2.1.10"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not op_mini all"
	]
}
